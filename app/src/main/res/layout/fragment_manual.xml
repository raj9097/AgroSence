<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual Equipment Control"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Control your farm equipment remotely"
                android:textSize="14sp"
                android:textColor="#6B7280" />

        </LinearLayout>

        <!-- Irrigation System Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_water_drop"
                        app:tint="#3B82F6"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Irrigation System"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937" />

                        <TextView
                            android:id="@+id/tv_irrigation_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: OFF"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/switch_irrigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#FFFFFF"
                        android:trackTint="#E5E7EB" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btn_irrigation_auto"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Auto Mode"
                        android:textSize="14sp"
                        android:backgroundTint="#EFF6FF"
                        android:textColor="#3B82F6"
                        app:cornerRadius="8dp"
                        android:elevation="0dp" />

                    <Button
                        android:id="@+id/btn_irrigation_schedule"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Schedule"
                        android:textSize="14sp"
                        android:backgroundTint="#F3F4F6"
                        android:textColor="#6B7280"
                        app:cornerRadius="8dp"
                        android:elevation="0dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Lighting System Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_wb_sunny"
                        app:tint="#F59E0B"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LED Growth Lights"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937" />

                        <TextView
                            android:id="@+id/tv_light_intensity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intensity: 0%"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/switch_lighting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#FFFFFF"
                        android:trackTint="#E5E7EB" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light Intensity"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seekbar_light_intensity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#F59E0B"
                    android:thumbTint="#F59E0B"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_light_sunrise"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Sunrise"
                        android:textSize="12sp"
                        android:backgroundTint="#FEF3C7"
                        android:textColor="#F59E0B"
                        app:cornerRadius="6dp"
                        android:elevation="0dp" />

                    <Button
                        android:id="@+id/btn_light_noon"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="Noon"
                        android:textSize="12sp"
                        android:backgroundTint="#FEF3C7"
                        android:textColor="#F59E0B"
                        app:cornerRadius="6dp"
                        android:elevation="0dp" />

                    <Button
                        android:id="@+id/btn_light_sunset"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Sunset"
                        android:textSize="12sp"
                        android:backgroundTint="#FEF3C7"
                        android:textColor="#F59E0B"
                        app:cornerRadius="6dp"
                        android:elevation="0dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Ventilation & Climate Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_air"
                        app:tint="#10B981"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ventilation System"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937" />

                        <TextView
                            android:id="@+id/tv_fan_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fan Speed: 0%"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/switch_ventilation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#FFFFFF"
                        android:trackTint="#E5E7EB" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fan Speed Control"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seekbar_fan_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#10B981"
                    android:thumbTint="#10B981"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Alert System Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_notifications"
                        app:tint="#EF4444"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alert System"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pest &amp; intrusion detection"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_sound_alarm"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Sound Alarm"
                        android:textSize="14sp"
                        android:backgroundTint="#FEE2E2"
                        android:textColor="#EF4444"
                        app:cornerRadius="8dp"
                        android:elevation="0dp"
                        app:icon="@drawable/ic_volume_up"
                        app:iconTint="#EF4444" />

                    <Button
                        android:id="@+id/btn_test_sensors"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Test Sensors"
                        android:textSize="14sp"
                        android:backgroundTint="#F3F4F6"
                        android:textColor="#6B7280"
                        app:cornerRadius="8dp"
                        android:elevation="0dp"
                        app:icon="@drawable/ic_setting"
                        app:iconTint="#6B7280" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Emergency Controls -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FEE2E2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_warning"
                        app:tint="#EF4444"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Controls"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#991B1B" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_emergency_stop"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="EMERGENCY STOP ALL"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#DC2626"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_stop"
                    app:iconTint="#FFFFFF" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>